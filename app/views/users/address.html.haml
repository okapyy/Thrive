.mypage
  .mypage-main.clearfix
    .mypage-content
      .mypage-card
        %h2.mypage-card__cash 発送元・お届け先住所変更
        .mypage-card__form 
          .mypage-card__form__input
            %p.mypage-card__form__number お名前
            %p.mypage-card__form__require 必須
          %input.mypage-card__form__text{type: "text", placeholder: "例）山田" }
          %input.mypage-card__form__text{type: "text", placeholder: "例）太郎" }
          
          .mypage-card__form__input
            %p.mypage-card__form__number お名前カナ
            %p.mypage-card__form__require 必須
          %input.mypage-card__form__text{type: "text", placeholder: "例）ヤマダ" }
          %input.mypage-card__form__text{type: "text", placeholder: "例）タロウ" }

          .mypage-card__form__input
            %p.mypage-card__form__number 郵便番号
            %p.mypage-card__form__require 必須
          %input.mypage-card__form__text{type: "text", placeholder: "例）123-4567", maxlength: "8", pattern: "\d{3}-\d{4}" }
          
          .mypage-card__form__input
            %p.mypage-card__form__number 都道府県
            %p.mypage-card__form__require 必須
          .mypage-card__form__select
            = collection_select :address ,:prefecture, Prefecture.all, :id, :name
            %i.mypage-card__form__select--icon-address.fas.fa-angle-down.fa-2x
          
          .mypage-card__form__input
            %p.mypage-card__form__number 市区町村
            %p.mypage-card__form__require 必須
          %input.mypage-card__form__text{type: "text", placeholder: "例）横浜市緑区" }
          
          .mypage-card__form__input
            %p.mypage-card__form__number 番地
            %p.mypage-card__form__require 必須
          %input.mypage-card__form__text{type: "text", placeholder: "例）青山1-1-1" }
          
          .mypage-card__form__input
            %p.mypage-card__form__number 建物
            %p.mypage-card__form__require--color 任意
          %input.mypage-card__form__text{type: "text", placeholder: "例）柳ビル103" }
          
          .mypage-card__form__input
            %p.mypage-card__form__number 電話
            %p.mypage-card__form__require--color 任意
          %input.mypage-card__form__text{type: "text", placeholder: "例）09012345678" }
          
          %button.mypage-card__form__btn
            = link_to "#",class: "mypage-card__form__btn--create" do
              変更する
    
    .mypage-side
      = render partial: "side_menu"
