.user-body
  .user-body__header
    = link_to root_path, class: "user-body__header__logo" do
      = image_tag 'logo.png', size: '170x46'
  .user-body__main
    .user-body__main__container
      .user-body__main__container__upper-row
        %p アカウントをお持ちでない方はこちら
        = link_to new_user_registration_path do
          新規会員登録
      .user-body__main__container__row
        .user-body__main__container__row__var
          = link_to "#", class:"user-body__main__container__row__var__facebook" do
            = icon('fab', 'facebook-square', class: "user-body__main__container__row__var__facebook--icon")
            Facebookでログイン
          = link_to "#", class:"user-body__main__container__row__var__google" do
            = icon('fab', 'google', class: "user-body__main__container__row__var__google--icon")
            Googleでログイン
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .user-body__main__container__row__form
            .user-body__main__container__row__form__field
              = f.email_field :email, autofocus: true, placeholder: 'メールアドレス', class: "user-body__main__container__row__form__field__input"
            .user-body__main__container__row__form__field
              = f.password_field :password, autocomplete: "current-password", placeholder: 'パスワード', class: "user-body__main__container__row__form__field__input"
            = f.submit "ログイン", class: "user-body__main__container__row__form__actions"
            = render "devise/shared/links"
  .user-body__bottom
    .user-body__bottom__nav
      %ul
        %li プライバシーポリシー
        %li FURIMA利用規約
        %li 特定商取引に関する表記
    = link_to root_path, class: "user-body__bottom__icon" do
      = image_tag 'logo-white.png', size: '150x40'
    %p ©️ FURIMA, inc.

 
    
