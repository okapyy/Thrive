.user-body
  .user-body__header
    .user-body__header__box
      .user-body__header__box__left
        = link_to root_path, class: "user-body__header__box__left__logo" do
          = image_tag 'logo.png', size: '170x46'
      .user-body__header__box__nav
        %ol.user-body__header__box__nav__ol
          %li.user-body__header__box__nav__ol__li--active
            会員情報
            .user-body__header__box__nav__ol__li__ball__left--active
          %li.user-body__header__box__nav__ol__li
            住所入力
            .user-body__header__box__nav__ol__li__ball__center
          %li.user-body__header__box__nav__ol__li
            完了
            .user-body__header__box__nav__ol__li__ball__right
  .user-body__main
    .user-body__main__contents
      .user-body__main__contents__title
        %h2 会員情報入力
      .user-body__main__contents__form
        .user-body__main__contents__form__banner
          = link_to user_facebook_omniauth_authorize_path, method: :post, class:"user-body__main__contents__form__banner__facebook" do
            = icon('fab', 'facebook-square', class: "user-body__main__contents__form__banner__facebook--icon")
            Facebookで登録
          = link_to user_google_oauth2_omniauth_authorize_path, method: :post, class:"user-body__main__contents__form__banner__google" do
            = icon('fab', 'google', class: "user-body__main__contents__form__banner__google--icon")
            Googleで登録
        = form_for(@user, url: registration_path(resource_name)) do |f|
          = render "devise/shared/error_messages", resource: resource
          .user-body__main__contents__form__field
            .user-body__main__contents__form__field--label
              = f.label "ニックネーム"
              %span.blue 必須
              = f.text_field :nickname, placeholder: "例) フリマ小次郎", class: "user-body__main__contents__form__field--input"
          .user-body__main__contents__form__field
            .user-body__main__contents__form__field--label
              = f.label "メールアドレス"
              %span.blue 必須
              = f.email_field :email, autocomplete: "email", placeholder: "PC・携帯どちらでも可", class: "user-body__main__contents__form__field--input"
          - if @sns_id.present?
            = hidden_field_tag :sns_auth, true
          - else
            .user-body__main__contents__form__field
              .user-body__main__contents__form__field--label
                = f.label "パスワード"
                %span.blue 必須
                = f.password_field :password, autocomplete: "new-password", placeholder: "7文字以上の半角英数字", class: "user-body__main__contents__form__field--input"
            .user-body__main__contents__form__field
              .user-body__main__contents__form__field--label
                = f.label "パスワード確認"
                %span.blue 必須
                = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "7文字以上の半角英数字", class: "user-body__main__contents__form__field--input"
          .user-body__main__contents__form__text
            %h2 本人確認
            %p 安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。他のお客さまに公開されることはありません。
          .user-body__main__contents__form__field
            .user-body__main__contents__form__field--label
              = f.label "生年月日"
              %span.blue 必須
              .user-body__main__contents__form__field--label--day
                != sprintf(f.date_select(:birthday, prompt:"--",use_month_numbers:true, start_year:Time.now.year, end_year:1900, date_separator:'%s'),'年','月')+'日'
              %p ※本人情報は正しく入力してください。会員登録後、修正するにはお時間を頂く場合があります。
          .user-body__main__contents__form__text--link
            %p
              「次に進む」のボタンを押すことにより、
              = link_to "利用規約"
              に同意したものとみなします
            = f.submit "次へ進む", class: "user-body__main__contents__form__actions"
          .user-body__main__contents__form__field--right
            = link_to "#" do
              本人情報の登録について
              = icon("fas", "angle-right")
          .user-body__main__contents__form__term
            %p
              This site protected by reCAPTCHA and the Google
              = link_to "Privacy Poicy"
              and
              = link_to "Terms of Service"
              apply.
  .user-body__bottom
    .user-body__bottom__nav
      %ul
        %li プライバシーポリシー
        %li FURIMA利用規約
        %li 特定商取引に関する表記
    = link_to root_path, class: "user-body__bottom__icon" do
      = image_tag 'logo-white.png', size: '150x40'
    %p ©️ FURIMA, inc.



