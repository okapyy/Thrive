.user-body
  .user-body__header
    .user-body__header__box
      .user-body__header__box__left
        = link_to root_path, class: "user-body__header__box__left__logo" do
          = image_tag 'logo.png', size: '170x46'
      .user-body__header__box__nav
        %ol.user-body__header__box__nav__ol
          %li.user-body__header__box__nav__ol__li--active
            会員情報
            .user-body__header__box__nav__ol__li__ball__left--active
          %li.user-body__header__box__nav__ol__li--active
            住所入力
            .user-body__header__box__nav__ol__li__ball__center--active
          %li.user-body__header__box__nav__ol__li
            完了
            .user-body__header__box__nav__ol__li__ball__right
  .user-body__main
    .user-body__main__contents
      .user-body__main__contents__title
        %h2 住所情報登録
      .user-body__main__contents__form
        = form_for @address do |f|
          = render "devise/shared/error_messages", resource: @address
          .user-body__main__contents__form__field
            %label お名前(全角)
            %span.blue 必須
            .user-body__main__contents__form__field__half
              = f.text_field :last_name, placeholder: "例) 鈴木", class: "user-body__main__contents__form__field__half--input"
              = f.text_field :first_name, placeholder: "例) 太郎", class: "user-body__main__contents__form__field__half--input"
          .user-body__main__contents__form__field
            %label お名前ふりがな(全角)
            %span.blue 必須
            .user-body__main__contents__form__field__half
              = f.text_field :last_name_kana, placeholder: "例) すずき", class: "user-body__main__contents__form__field__half--input"
              = f.text_field :first_name_kana, placeholder: "例) たろう", class: "user-body__main__contents__form__field__half--input"
          .user-body__main__contents__form__field
            .user-body__main__contents__form__field--label
              = f.label "郵便番号（数字）"
              %span.blue 必須
              = f.text_field :postal_code, placeholder: "例) 1234567", class: "user-body__main__contents__form__field--input"
          .user-body__main__contents__form__field
            .user-body__main__contents__form__field--label
              = f.label "都道府県"
              %span.blue 必須
              = f.collection_select :prefecture_id, Prefecture.all, :id, :name, prompt: "選択してください"
          .user-body__main__contents__form__field
            .user-body__main__contents__form__field--label
              = f.label "市区町村"
              %span.blue 必須
              = f.text_field :city, placeholder: "例) 渋谷区", class: "user-body__main__contents__form__field--input"
          .user-body__main__contents__form__field
            .user-body__main__contents__form__field--label
              = f.label "番地"
              %span.blue 必須
              = f.text_field :address, placeholder: "例) 神南1-12-16", class: "user-body__main__contents__form__field--input"
          .user-body__main__contents__form__field
            .user-body__main__contents__form__field--label
              = f.label "建物名（任意）"
              %span.gray 任意
              = f.text_field :building, placeholder: "例) アジアビル 801 ", class: "user-body__main__contents__form__field--input"
          .user-body__main__contents__form__field
            .user-body__main__contents__form__field--label
              = f.label "電話番号"
              %span.gray 任意
              = f.text_field :tel, placeholder: "例) 0120444444", class: "user-body__main__contents__form__field--input"
          .user-body__main__contents__form__text--link
            = f.submit "登録する", class: "user-body__main__contents__form__actions"
  .user-body__bottom
    .user-body__bottom__nav
      %ul
        %li プライバシーポリシー
        %li FURIMA利用規約
        %li 特定商取引に関する表記
    = link_to root_path, class: "user-body__bottom__icon" do
      = image_tag 'logo-white.png', size: '150x40'
    %p ©️ FURIMA, inc